package com.java;
import java.util.Scanner;
class totalamount{
 public static void main(String[]args){
     Scanner scan=new Scanner(System.in);
     int choice;
     int count=1;
     int total=0;
     do{
         System.out.println("enter the product value:");
         int a=scan.nextInt();
         total=total+a;
         System.out.println(count+"continue?(1 to continue/0 to exist):");
     choice=scan.nextInt();
         count++;
     }
     while(choice!=0);
     System.out.println("total amount:"+total);
     System.out.println("exited");
     scan.close();
     }
     }
 
